class Solution(object):
    def isHappy(self, n):
        """
        :type n: int
        :rtype: bool
        """
        def get_digits(n):
            result, quo, rem = [], -1, -1
            if n <= 9:
                result.append(n)
                return n
            while quo != 0:
                quo, rem = n//10, n%10
                result.append(rem)
                n = quo
            return result
        s = 0
        sums_dict = {}
        flag = False
        while flag == False:
            digits = get_digits(n)
            if isinstance(digits, int):
                s = digits*digits
            else:
                for d in digits:
                    s = s + d*d
                print("Sum of digits squared are ", s)
            if s == 1:
                flag = True
                return True
            if s not in sums_dict:
                sums_dict[s] = 1
                n = s
                s = 0
            else:
                flag = True
                return False
            
                
